{
    // ===========================================
    // Global Configuration
    // ===========================================
    "layer": "top",
    "position": "top",
    // "height": 32,
    // "width": 1280,
    "spacing": 4,
    "modules-left": ["custom/launcher", "niri/workspaces", "wlr/taskbar"],
    "modules-center": ["clock"],
    "modules-right": [
        "tray",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "battery",
        "idle_inhibitor",
        "custom/lock",
        "custom/notification"
    ],

    // ===========================================
    // Module: Workspaces
    // ===========================================
    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "default": "ÔÑå",
            "active": "ÔÑë",
            "focused": "ÔÑë"
        },
        "on-click": "activate",
        "on-click-right": "close"
    },

    // ===========================================
    // Module: System Information
    // ===========================================
    "cpu": {
        "format": "Ôíº  {usage}%",
        "interval": 1,
        "max-length": 10,
        "on-click": "kitty -e btop",
        "tooltip": true
        // "tooltip-format": "Ôãõ  CPU: {usage}%  |  Load: {load}\n  Cores: {n_cores}  |  Threads: {n_threads}\n  Freq: {avg_frequency}GHz (Min: {min_frequency}GHz, Max: {max_frequency}GHz)"
    },

    "memory": {
        "format": "ÓøÖ  {percentage}%",
        "interval": 1,
        "tooltip": true,
        "tooltip-format": "üß†  Memory: {percentage}%\n\n  Used: {used:0.1f}G / {total:0.1f}G\n  Swap: {swapUsed:0.1f}G / {swapTotal:0.1f}G",
        "max-length": 10
    },

    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "critical-threshold": 80,
        "format": "Ôãâ  {temperatureC}¬∞C",
        "format-critical": "Ôãá  {temperatureC}¬∞C",
        "tooltip": true,
        "tooltip-format": "üå°Ô∏è  CPU Temperature: {temperatureC}¬∞C"
    },

    // ===========================================
    // Module: Network
    // ===========================================
    "network": {
        "interval": 3,
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Ôõø  {ifname}",
        "format-disconnected": "Ôöî  Disconnected",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "üåê  Network\n\n  SSID: {essid}\n  IP: {ipaddr}/{cidr}\n  Strength: {signalStrength}%\n  ‚ñº {bandwidthDownBits}  ‚ñ≤ {bandwidthUpBits}",
        "on-click": "nm-connection-editor",
        "on-click-right": "nm-connection-editor"
    },

    // ===========================================
    // Module: Audio
    // ===========================================
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "{icon}  {volume}% Ôäî",
        "format-muted": "Óª® ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 1,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "tooltip": false
    },

    // ===========================================
    // Module: Power Management
    // ===========================================
    "backlight": {
        "device": "amdgpu_bl1",
        "format": "{icon} {percent}%",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "on-scroll-up": "light -A 5",
        "on-scroll-down": "light -U 5",
        "tooltip": false
    },

    "battery": {
        "interval": 30,
        "states": {
            "warning": 20,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon}",
        "tooltip": true,
        "tooltip-format": "üîã  {capacity}%\n‚è±Ô∏è  {time} remaining",
        "tooltip-format-discharging": "üîã  {capacity}%\n‚è±Ô∏è  {time} remaining",
        "tooltip-format-charging": "‚ö°  Charging: {capacity}%\n‚è±Ô∏è  {time} until full",
        "tooltip-format-full": "üîå  Fully charged",
        "tooltip-format-plugged": "üîå  Plugged in: {capacity}%",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "idle_inhibitor": {
        "format": "{icon} ",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "tooltip-format-deactivated": "üí§  {status}\nClick to activate idle inhibitor",
        "tooltip-format-activated": "üí§  {status}\nClick to deactivate idle inhibitor"
    },

    // ===========================================
    // Module: System Controls
    // ===========================================
    "custom/launcher": {
        "format": "ÔåÉ ",
        "on-click": "fuzzel --config ~/.config/fuzzel/launcher.ini || pkill fuzzel",
        "on-click-right": "pkill fuzzel",
        "tooltip": false
    },

    "custom/lock": {
        "format": "ÔÄ£ ",
        "on-click": "swaylock",
        "tooltip": false
    },

    "custom/power": {
        "format": "‚èª",
        "on-click": "wlogout",
        "tooltip": false
    },

    // ===========================================
    // Module: Clock
    // ===========================================
    "clock": {
        "interval": 10,
        "format": "{:%a %d %b %H:%M}",
        "format-alt": "{:%Y-%m-%d %H:%M:%S}",
        "tooltip": true,
        "tooltip-format": "{calendar}",
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 1,
            "weeks-pos"     : "left",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#a6e3a1'><b>{}</b></span>",
                "days":       "<span color='#89b4fa'><b>{}</b></span>",
                "weeks":      "<span color='#f5c2e7'><b>W{}</b></span>",
                "weekdays":   "<span color='#f9e2af'><b>{}</b></span>",
                "today":      "<span color='#f38ba8'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    // ===========================================
    // Module: Tray
    // ===========================================
    "tray": {
        "icon-size": 16,
        "spacing": 8,
        "show-passive-items": true
    },

    // ===========================================
    // Module: Taskbar
    // ===========================================
    "wlr/taskbar": {
        "format": " {icon} ",
        "icon-size": 14,
        "icon-theme": "Colloid-Purple-Catppuccin-Dark",
        "tooltip-format": "{title} | {app_id}",
        "on-click": "activate",
        "on-click-middle": "close",
        "on-click-right": "minimize-raise"
    },

    // ===========================================
    // Module: Notifications
    // ===========================================
    "custom/notification": {
        "escape": true,
        "exec": "swaync-client -swb",
        "exec-if": "which swaync-client",
        "format": "{icon}",
        "format-icons": {
        "dnd-inhibited-none": "Û∞Çö<sup>ÔÑë</sup>",
        "dnd-inhibited-notification": "Û∞Çö<span foreground='#f38ba8'><sup>ÔÑë</sup></span>",
        "dnd-none": "Û∞Çõ",
        "dnd-notification": "Û∞Çõ<span foreground='#f38ba8'><sup>ÔÑë</sup></span>",
        "inhibited-none": "Û∞Çö<sup>Û∞ú∫</sup>",
        "inhibited-notification": "Û∞µô<span foreground='#f38ba8'><sup>ÔÑë</sup></span>",
        "none": "Û∞Çö<span color='#6c7086'><sup>ÔÑë</sup></span>",
        "notification": "Û∞Çö<span foreground='#f38ba8'><sup>ÔÑë</sup></span>"
        },
        "on-click": "sleep 0.1 && swaync-client -t -sw",
        "on-click-right": "sleep 0.1 && swaync-client -d -sw",
        "return-type": "json",
        "tooltip": false
    }
}
