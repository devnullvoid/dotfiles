/* =============================================================================
 *
 * Waybar configuration
 *
 * Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
 *
 * =========================================================================== */

/* -----------------------------------------------------------------------------
 * Keyframes
 * -------------------------------------------------------------------------- */

@import "mocha.css";


/* -----------------------------------------------------------------------------
   * Base styles
   * -------------------------------------------------------------------------- */

/* Reset all styles */

* {
    color: @lavender;
    border: 0;
    padding: 0 0;
    font-family: "JetBrainsMono Nerd Font";
    font-feature-settings: "zero";
    font-size: 14px;
    font-weight: bold;
    /* padding-bottom:4px;
      padding-top: 4px; */
    transition: all 0.5s ease;
}

window#waybar {
    border-bottom: 2px solid shade(@base, 1.1);
    /* border-radius: 10px; */
    /* background:#2d2a2e; */
    /* background-color: rgba(36, 39, 58, 0.85); */
    /* background-color: rgba(0, 0, 0, 0); */
    /* background-color: shade(@crust, 0.95); */
    background-color: alpha(@crust, 0.80);
}

#workspaces button {
    color: @base;
    border-radius: 50%;
    /* background-color: @base; */
    margin: 0px 0px;
    padding: 2 6 2 0;
}

#workspaces button:hover * {
    color: @mauve;
}

#workspaces button:hover {
    color: @mauve;
    box-shadow: none;
    /* Remove predefined box-shadow */
    text-shadow: none;
    /* Remove predefined text-shadow */
    border: 0px;
    background: none;
}

#workspaces * {
    color: @text;;
}

#workspaces {
    border-style: solid;
    background-color: @base;
    opacity: 1;
    border-radius: 10px;
    margin: 8px 0px 8px 8px;
}

#workspaces button.focused {
    color: @lavender;
    /* border-radius: 20px; */
    /* background-color: @flamingo; */
}

#workspaces button.focused * {
    color: @lavender;
}

#mode {
    color: @peach;
}

#clock,
#custom-lock,
#custom-swap,
#custom-background,
#custom-cava-internal,
#battery,
#cpu,
#memory,
#idle_inhibitor,
#temperature,
#custom-keyboard-layout,
#backlight,
#network,
#pulseaudio,
#mode,
#tray,
#taskbar,
#custom-power,
#custom-pacman,
#mpd {
    padding: 5px 12px;
    border-style: solid;
    border-radius: 10px;
    background-color: shade(@base, 1.1);
    opacity: 1;
    margin: 8px 4px;
}

#clock:hover,
#custom-lock:hover,
#custom-swap:hover,
#custom-background:hover,
#custom-cava-internal:hover,
#battery:hover,
#cpu:hover,
#memory:hover,
#idle_inhibitor:hover,
#temperature:hover,
#custom-keyboard-layout:hover,
#backlight:hover,
#network:hover,
#pulseaudio:hover,
#mode:hover,
#tray:hover,
#custom-power:hover,
#custom-pacman:hover,
#mpd:hover {
  background-color: @surface0;
}

