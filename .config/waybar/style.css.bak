#clock {
    /* background-color:#a3be8c; */
    color: @text;
    /* border-radius: 10px; */
    /* margin: 8px 10px; */
}

#custom-lock {
  padding-right: 7px;
}

#backlight {
    color: @yellow;
    /* border-bottom: 2px solid @yellow; */
