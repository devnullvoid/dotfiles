}

#custom-keyboard-layout {
    color: @peach;
    /* border-bottom: 2px solid @peach; */
    border-radius: 0 10px 10px 0;
    margin-right: 10px;
}

/* Styling tooltips */
tooltip {
    border-radius: 15px;
    background: @surface0;
}
tooltip > box {
    padding: 15px
}
tooltip label {
    color: @text;
}
