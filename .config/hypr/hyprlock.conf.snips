# GENERAL
general {
    no_fade_in = false
    grace = 0
    disable_loading_bar = false
}

# GREETINGS
label {
    monitor =
    text =Welcome!
    color = $text
    font_size = 55
    font_family = $font
    position = 165, 320
    halign = left
    valign = center
}

# Time
label {
    monitor =
    text = cmd[update:1000] echo "<span>$(date +"%I:%M")</span>"
    color = $text
    font_size = 40
    font_family = $font
    position = 255, 240
    halign = left
    valign = center
}

# Day-Month-Date
label {
    monitor =
    text = Sunday, September 29
    color = $text
    font_size = 20
    text_align = left
    font_family = $font
    position = 180, 175
    halign = left
    valign = center
}

