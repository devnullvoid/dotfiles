source = $HOME/.config/hypr/mocha.conf

$accent = $mauve
$accentAlpha = $mauveAlpha
$font = Monaspace Radon

# GENERAL
general {
  grace = 0
  hide_cursor = false
}

# BACKGROUND
background {
    monitor =
    path = screenshot   # only png supported for now
    color = $base	
    blur_size = 4
    blur_passes = 3 # 0 disables blurring
    noise = 0.0117
    contrast = 1.000
    brightness = 1.0000
    vibrancy = 0.2100
    vibrancy_darkness = 0.0
}

